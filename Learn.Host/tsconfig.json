{
  "compilerOptions": {
    "target": "ES2015",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "ESNext",
      "ES2021.String",
      "DOM",
      "DOM.Iterable"
    ],
    "sourceMap": true,
    "plugins": [
      {
        "name": "typescript-lit-html-plugin",
        "tags": [
          "html",
          "template"
        ]
      }
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "*.spec.*"
  ]
}